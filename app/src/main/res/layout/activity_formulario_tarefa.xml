<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.FormularioTarefaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_add_titulo_tarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:inputType="textCapWords"
            android:hint="Digite o titulo da tarefa"
            android:autofillHints="" />

        <EditText
            android:id="@+id/edit_add_descricao_tarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:inputType="textCapWords"
            android:hint="Digite a descricao da tarefa"
            android:autofillHints="" />

        <EditText
            android:id="@+id/edit_add_prazo_tarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:inputType="textCapWords"
            android:hint="Digite o prazo da tarefa"
            android:autofillHints="" />

    </LinearLayout>
</ScrollView>